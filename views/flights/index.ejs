<%- include("../partials/header") %>

    <h1>Flight List</h1>
    <table>
        <thead>
        <tr>
            <th>Airline</th>
            <th>Airport</th>
            <th>Flight Number</th>
            <th>Departure Date</th>
            <th>Destination</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        <!-- Write the line of EJS to iterate over flights using forEach -->
        <% flights.forEach(function(f) { %>
            <tr>
            <td><%= f.airline %></td>
            <td><%= f.airport %></td>
            <td><%= f.flightNo %></td>
            <td><%= f.departureDate %></td>
            <td><%= f.destination %></td>
            <td><button><a href="../flights/show.ejs">Details</a></button></td>
            </tr>
        <!-- Close the forEach using EJS here -->
        <% }); %>
        </tbody>
    </table>

    <%- include('../partials/footer') %> 